<project name="mips" default="compile" basedir=".">

  <property name="parser.name" value="MipsParser"/>

  <property name="package" value="mips"/>

  <property name="src.dir" value="src"/>
  <property name="grammar.dir" value="mips"/>
  <property name="gen.dir" value="${basedir}/gen"/>
  <property name="classes.dir" value="bin"/>
  <property name="tools"   value="tools"/>

  <taskdef name="jflex"   classname="JFlex.anttask.JFlexTask" classpath="${tools}/JFlex.jar"/>
  <taskdef name="beaver"  classname="beaver.comp.run.AntTask" classpath="${tools}/beaver.jar"/>
  <taskdef name="jastadd" classname="org.jastadd.JastAddTask" classpath="${tools}/jastadd2.jar" />

  <target name="scanner">
    <mkdir dir="${gen.dir}/${package}"/>
    <jflex file="${grammar.dir}/MipsScanner.flex" outdir="${gen.dir}/${package}" nobak="true" />
  </target>

  <target name="parser">
    <mkdir dir="${gen.dir}/${package}"/>
    <beaver file="${grammar.dir}/MipsParser.beaver" destdir="${gen.dir}/${package}" terminalNames="yes" compress="no" useSwitch="yes" reportActions="yes" />
  </target>

  <target name="jastadd">
    <mkdir dir="${gen.dir}"/>
    <jastadd package="${package}" grammar="${grammar.dir}" outdir="${gen.dir}" beaver="true" debug="true">
        <fileset dir=".">
          <include name="${grammar.dir}/*.ast"/>
          <include name="${grammar.dir}/*.jrag"/>
          <include name="${grammar.dir}/*.jadd"/>
        </fileset>
      </jastadd>
  </target>

  <target name="preprocess" depends="jastadd">
  </target>

  <target name="compile" depends="preprocess">
     <mkdir dir="${classes.dir}"/>
     <javac srcdir="${gen.dir}"
            destdir="${classes.dir}"
            classpath="${tools}/beaver-rt.jar"
            debug="true" debuglevel="lines,vars,source"
     	    includeantruntime="false">
             <include name="**/*.java"/>
     </javac>
     <javac srcdir="${src.dir}"
            destdir="${classes.dir}"
            classpath="${classes.dir}:${tools}/beaver-rt.jar"
            debug="true" debuglevel="lines,vars,source"
         	includeantruntime="false">
            <include name="**/*.java"/>
     </javac>
  </target>

  <target name="clean">
     <delete dir="${gen.dir}"/>
  </target>

  <target name="test" depends="compile">
    <java
      classname="mips.FrontEnd"
      classpath="${classes.dir}:${tools}/junit.jar:${tools}/beaver-rt.jar"
      fork="true"
      dir=".">
      <arg value="${target}"/>
    </java>
  </target>

  <target name="alltests" depends="compile">
    <apply executable="java" parallel="false" force="true">
      <arg value="-classpath" />
      <arg path="${classes.dir}:${tools}/junit.jar:${tools}/beaver-rt.jar" />
      <arg value="mips.FrontEnd" />
      <srcfile />
        <!--fileset dir="tests/" includes="*.java" /-->
      <fileset dir="../sheets/ex5/testing/tests/" includes="*.s" />
    </apply>
  </target>

  <target name="jar" depends="compile">
    <jar basedir="${classes.dir}" destfile="P2S.jar" >
      <zipgroupfileset dir="tools" includes="*.jar"/>
      <manifest>
        <attribute name="Main-Class" value="${package}.Main"/>
      </manifest>
    </jar>
  </target>
</project>
